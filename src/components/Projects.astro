---
import Card from "./Card.astro";

const projects = [
  {
    title: "SIGET - Degree process management system at FCBIyT",
    Description: "System to improve the degree process in the Faculty of Basic Sciences, Engineering and Technology (FCBIyT). Optimize delivery times, reduce paper use and improve the process experience.",
    img: "/Imagen2.png",
    url: "https://github.com/erickcapilla/siget",
    technologies: ["React", "Tailwind", "NextUI", "TypeScript"]
  },
  {
    title: "XCELENT - Product catalog",
    Description: "Product catalog, improves the sale of products that were previously sold through WhatsApp. Payments with PayPal, shipping tracking, view products without having an account.",
    img: "/Imagen1.png",
    url: "https://github.com/erickcapilla/xcelente",
    technologies: ["React", "Tailwind", "NextUI", "Firebase", "PayPal", "TypeScript"]
  },
];
---

<article class="mt-12 py-3 px-5 grid gap-3">
  {
    projects.map((project) => (
      <Card title={project.title} href={project.url}>
        <div class="flex max-md:flex-col items-center gap-2 mt-5">
          <img
            src={project.img}
            alt={project.title}
            class="md:w-1/2 h-48 object-cover rounded-md"
          />
          <div class="md:w-1/2 py-2">
            {project.technologies.map((tech) => (
              <span class="inline-block w-auto border-2 border-gray-900 px-2 py-1 rounded-full mr-2 mb-2">
                {tech}
              </span>
            ))}
            <p class="mt-2">{project.Description}</p>
          </div>
        </div>
      </Card>
    ))
  }
</article>
