---
import Navbar from '@/components/Navbar.astro'
---

<header
    class="sticky z-50 top-3 mx-auto max-w-3xl w-full h-16 backdrop-blur-sm supports-backdrop-blur:bg-white/95 bg-white bg-opacity-10 rounded-2xl flex items-center gap-1 justify-between px-3 overflow-hidden"
  >
    <div
      class="absolute -z-50 top-0 right-0 w-full h-full bg-gradient-to-r from-transparent to-[rgb(var(--accent))] opacity-10"
    >
    </div>
    <section class="flex gap-2 items-center">
      <picture class="block w-10 h-10 rounded-full overflow-hidden">
        <img src="/perfil.jpg" alt="Erick Capilla's profile image" />
      </picture>
      <div class="flex flex-col">
        <h1 class="text-sm font-bold">Erick Capilla</h1>
        <a
          href="https://www.linkedin.com/in/erickcapilla"
          class="text-gray-500 text-sm underline">LinkedIn</a
        >
      </div>
    </section>
    <section class="max-[768px]:hidden">
      <Navbar />
    </section>
    <a
      class="bg-[rgb(var(--accent))] px-2 py-1 font-bold text-sm text-[rgb(var(--primary))] rounded-md"
      href="/erickcapilla_cv.pdf"
      download="erickcapilla_cv.pdf"
      >Curriculum</a
    >
  </header>
